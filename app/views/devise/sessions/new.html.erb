<h2 class="text-center">Вхід</h2>

<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-horizontal border p-4 rounded shadow-sm" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group mb-3">
          <%= f.label :email, "Email", class: "form-label" %>
          <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email", placeholder: "Введіть ваш email" %>
        </div>

        <div class="form-group mb-3">
          <%= f.label :password, "Пароль", class: "form-label" %>
          <%= f.password_field :password, class: "form-control", autocomplete: "current-password", placeholder: "Введіть ваш пароль" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-group mb-3 form-check">
            <%= f.check_box :remember_me, class: "form-check-input" %>
            <%= f.label :remember_me, "Запам'ятати мене", class: "form-check-label" %>
          </div>
        <% end %>

        <div class="form-group d-grid gap-2">
          <%= f.submit "Увійти", class: "btn btn-primary btn-block" %>
        </div>
      <% end %>

      <div class="text-center mt-3">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>