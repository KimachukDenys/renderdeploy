<h1 class="text-center mb-4">Список замовлень</h1>

<div class="container">
  <table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
      <tr>
        <th>ID</th>
        <th>Ім'я</th>
        <th>Email</th>
        <th>Телефон</th>
        <th>Загальна сума</th>
        <th>Дія</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.id %></td>
          <td><%= order.name %></td>
          <td><%= order.email %></td>
          <td><%= order.phone %></td>
          <td><%= number_to_currency(order.total, unit: 'UAH ') %></td>
          <td>
            <%= link_to 'Переглянути', order_path(order), class: 'btn btn-primary' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
