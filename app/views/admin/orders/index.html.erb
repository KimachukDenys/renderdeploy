<h1 class="text-center my-4">Список замовлень</h1>

<table class="table table-striped table-bordered">
  <thead class="table-dark">
    <tr>
      <th>ID</th>
      <th>Користувач</th>
      <th>Сума</th>
      <th>Дата</th>
      <th>Дії</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.id %></td>
        <td><%= order.user.name %></td>
        <td><%= number_to_currency(order.total, unit: 'UAH ', format: "%u %n") %></td>
        <td><%= order.created_at.strftime("%Y-%m-%d %H:%M") %></td>
        <td>
          <%= link_to 'Переглянути', admin_order_path(order), class: 'btn btn-primary btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<!-- Стилі для кращого вигляду -->
<style>
  .table {
    width: 100%;
    margin-top: 20px;
    font-size: 1rem;
  }

  .table th, .table td {
    text-align: center;
    vertical-align: middle;
    padding: 10px;
  }

  .table th {
    background-color: #343a40;
    color: #fff;
    font-size: 1.1rem;
  }

  .table-striped tbody tr:nth-child(odd) {
    background-color: #f9f9f9;
  }

  .btn-primary {
    font-size: 0.9rem;
    padding: 5px 10px;
  }

  .btn-primary:hover {
    background-color: #0056b3;
  }

  .text-center {
    text-align: center;
  }

  .my-4 {
    margin-top: 20px;
    margin-bottom: 20px;
  }
</style>
